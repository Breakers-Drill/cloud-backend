generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SensorData {
  id        String   @id @default(uuid())
  edgeId    Int      @map("edge_id")
  tag       String
  timestamp DateTime @default(now())
  value     Int

  tagData    TagsData? @relation(fields: [tagsDataId], references: [id])
  tagsDataId Int?

  @@map("sensor_data")
}

model Thresholds {
  id  Int    @id @default(autoincrement())
  tag String @unique
  min Int?
  max Int?

  @@map("thresholds")
}

model TagsData {
  id         Int          @id @default(autoincrement())
  tag        String       @unique
  name       String
  type       String
  minValue   Int          @map("min_value")
  maxValue   Int          @map("max_value")
  multiplier Float        @default(1)
  comment    String       @default("")
  sensorData SensorData[]

  @@map("tags_data")
}

model Edge {
  key          String  @id @db.VarChar(255)
  name         String? @db.VarChar(255)
  attributes   EdgeAttribute[]
  blocks       EdgeBlock[]
}

model EdgeAttribute {
  id                    Int     @id @default(autoincrement())
  edge_key              String  @db.VarChar(255)
  bypass_state          String? @db.VarChar(255)
  drive_state           String? @db.VarChar(255)
  daily_maintenance     Boolean?
  weekly_maintenance    Boolean?
  monthly_maintenance   Boolean?
  semiannual_maintenance Boolean?
  annual_maintenance    Boolean?
  
  edge                  Edge @relation(fields: [edge_key], references: [key])

  @@index([edge_key])
  @@map("edge_attributes")
}

model EdgeBlock {
  edge_key    String  @db.VarChar(255)
  block_name  String  @db.VarChar(255)
  description String? @db.Text
  tags        BlockTag[]

  edge        Edge    @relation(fields: [edge_key], references: [key])

  @@id([edge_key, block_name])
  @@map("edges_blocks")
}

model BlockTag {
  tag         String  @id @db.VarChar(255)
  description String? @db.Text
  edge_key    String  @db.VarChar(255)
  block_name  String  @db.VarChar(255)
  block       EdgeBlock @relation(fields: [edge_key, block_name], references: [edge_key, block_name])
}