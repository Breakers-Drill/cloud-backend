generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SensorData {
  id        String   @id @default(uuid())
  edgeId    Int      @map("edge_id")
  tag       String
  timestamp DateTime @default(now())
  value     Int

  tagData    TagsData? @relation(fields: [tagsDataId], references: [id])
  tagsDataId Int?

  @@map("sensor_data")
}

model Thresholds {
  id  Int    @id @default(autoincrement())
  tag String @unique
  min Int?
  max Int?

  @@map("thresholds")
}

model TagsData {
  id         Int          @id @default(autoincrement())
  tag        String       @unique
  name       String       @unique
  type       String
  minValue   Int          @map("min_value")
  maxValue   Int          @map("max_value")
  multiplier Float        @default(1)
  comment    String       @default("")
  sensorData SensorData[]

  @@map("tags_data")
}
